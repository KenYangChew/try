
{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "height": 500,
    "data": {
        "url": "https://raw.githubusercontent.com/KenYangChew/VIS2/main/data/Country-data.csv"
    },

    "transform": [
          {"filter": 
              {"field": "country", "oneOf": ["Singapore","Malta","Luxembourg", "Seychelles", "Lesotho", "Liberia", "Ireland", "Kyrgyz Republic", "Vietnam", "Kiribati", "Guyana"]}}
    ],
    "mark": "rect",
    "encoding": {
        "x": {
            "field": "imports",
            "type": "quantitative",
            "title": "Imports of goods and services"
        },
        "y": {
            "field": "country",
            "title": "Country",
            "sort" : "-x"
        },
    "tooltip": [
      {"field": "country", "type": "nominal","title": "Country"},
      {"field": "imports", "title": "Imports","type": "quantitative"}],
        "color": {
            "field": "imports",
            "aggregate": "max",
            "type": "quantitative",
            "legend": {"title": "Million US$",
              "values": [0, 200]
            }
        }
    },
    
       "config": 
      {
        "background" : "#ffffff",
        "view": {"stroke": "transparent"},
        "legend": {
          "titleFontSize": 12,
          "labelFontSize": 12
        }
  }
  }
